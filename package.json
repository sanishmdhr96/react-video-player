{
  "name": "react-video-player-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/react-video-player",
    "dev": "npm run dev --workspace=examples/nextjs-demo",
    "dev:package": "npm run dev --workspace=packages/react-video-player",
    "publish:package": "npm run build && npm publish --workspace=packages/react-video-player --access public",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules packages/*/dist"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.0.0"
  }
}
