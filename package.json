{
  "name": "react-video-player-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "docs-site",
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=docs-site",
    "dev:example": "npm run dev --workspace=examples/nextjs-demo",
    "dev:package": "npm run dev --workspace=packages/react-video-player",
    "build": "npm run build --workspace=packages/react-video-player",
    "build:docs": "npm run build --workspace=docs-site",
    "build:example": "npm run build --workspace=examples/nextjs-demo"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.0.0"
  }
}
