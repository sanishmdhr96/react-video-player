{
  "name": "react-helios",
  "version": "2.3.1",
  "description": "Production-grade React video player with HLS, quality selection, live streams, subtitles, and VTT sprite thumbnail preview",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": {
      "types": "./dist/styles.d.ts",
      "default": "./dist/styles.css"
    }
  },
  "scripts": {
    "build": "tsup && node -e \"require('fs').writeFileSync('dist/styles.d.ts', 'export {};\\n');\"",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "video",
    "player",
    "video-player",
    "hls",
    "hls.js",
    "live-stream",
    "thumbnail",
    "preview",
    "quality",
    "subtitles",
    "captions",
    "typescript",
    "nextjs",
    "picture-in-picture",
    "vtt",
    "sprite-sheet",
    "thumbnail-preview"
  ],
  "author": "Sanish Manandhar <mail.sanishmanandhar@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanishmdhr96/react-video-player"
  },
  "bugs": {
    "url": "https://github.com/sanishmdhr96/react-video-player/issues"
  },
  "homepage": "https://github.com/sanishmdhr96/react-video-player#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "hls.js": "^1.6.15"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  }
}
