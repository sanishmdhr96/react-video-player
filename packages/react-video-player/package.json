{
  "name": "@sanishmdhr/react-video-player",
  "version": "1.0.1",
  "description": "Production-grade React video player with YouTube-style features",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "video",
    "player",
    "video-player",
    "hls",
    "thumbnail",
    "preview",
    "prefetch",
    "youtube-style",
    "typescript",
    "nextjs"
  ],
  "author": "Sanish Manandhar <mail.sanishmanandhar@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanishmdhr96/react-video-player"
  },
  "bugs": {
    "url": "https://github.com/sanishmdhr96/react-video-player/issues"
  },
  "homepage": "https://github.com/sanishmdhr96/react-video-player#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "hls.js": "^1.6.15"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "postcss": "^8.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
